<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dulce Sabor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
      
        body {
            background-color: #2c3e50; 
            color: white;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh; 
        }

        
        .container-fluid {
            flex-grow: 1; 
            padding-left: 0;
            padding-right: 0;
        }

        .navbar {
            background-color: #212529; 
            width: 100%; 
        }

        
        footer {
            background-color: #212529; 
            text-align: center;
            padding: 20px 0;
            width: 100%;
            margin-top: auto; 
            position: relative;
            bottom: 0;
        }

        .container {
            padding: 0 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <span class="navbar-brand">Dulce Sabor</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Home")">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody() <!-- Aquí se renderiza el contenido de las vistas -->
    </div>

    <!-- Footer -->
    <footer class="text-white py-4">
        <div class="container">
            <p>&copy; 2025 Dulce Sabor. Todos los derechos reservados.</p>
            <p>
             
            </p>
        </div>
    </footer>

</body>
</html>
