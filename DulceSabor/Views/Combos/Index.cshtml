@model IEnumerable<DulceSabor.Models.combos>

@{
    ViewData["Title"] = "Combos";
}

<div class="container mt-4">
    <h2 class="mb-4">Lista de Combos</h2>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Plato</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var combo in Model)
            {
                <tr>
                    <td>@combo.nombre</td>
                    <td>@combo.descripcion</td>
                    <td>@combo.precio.ToString("C")</td>
                    <td>@combo.id_plato</td>
                </tr>
            }
        </tbody>
    </table>
</div>
